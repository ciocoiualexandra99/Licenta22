<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="637dp"
        android:text="Time to set up your device!"
        android:textColor="@color/white"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/frame1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="441dp"
        android:src="@drawable/chen" />

    <ImageView
        android:id="@+id/frame2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="254dp"
        android:src="@drawable/chen" />

    <ImageView
        android:id="@+id/frame3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="67dp"
        android:layout_marginBottom="65dp"
        android:src="@drawable/chen" />

    <TextView
        android:layout_width="207dp"
        android:layout_height="78dp"
        android:layout_alignEnd="@+id/frame1"
        android:layout_alignBottom="@+id/frame1"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="21dp"
        android:text="Allow access to your camera."
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="207dp"
        android:layout_height="78dp"
        android:layout_above="@+id/frame3"
        android:layout_alignEnd="@+id/frame2"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="49dp"
        android:text="Place yout phone against a wall or stable object."
        android:textColor="@color/white"
        android:textSize="22sp" />

    <TextView
        android:layout_width="207dp"
        android:layout_height="78dp"
        android:layout_above="@+id/frame3"
        android:layout_alignEnd="@+id/frame2"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="-142dp"
        android:text="Step back with your mat sideways and your entire body in frame."
        android:textColor="@color/white"
        android:textSize="22sp" />

    <com.google.android.material.chip.Chip
        android:id="@+id/btnGotIT"
        android:layout_width="363dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@color/pink2"
        android:text="GOT IT"
        android:textAlignment="center"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/frame1"
        android:layout_alignBottom="@+id/frame1"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="108dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/frame2"
        android:layout_alignBottom="@+id/frame2"
        android:layout_marginEnd="134dp"
        android:layout_marginBottom="122dp"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/frame2"
        android:layout_alignBottom="@+id/frame3"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="124dp"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="28sp" />
</RelativeLayout>